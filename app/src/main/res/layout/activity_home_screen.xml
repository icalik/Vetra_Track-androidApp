<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cf.vetratrack.vetratrack.HomeScreen">


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#e1e2dc"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout

            android:layout_width="match_parent"
            android:id="@+id/lyt_hometext"
            android:layout_height="70dp"
            android:background="#ffaa00"
            android:paddingTop="25dp"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_home"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lyt_token"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lyt_hometext"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:text="FUll Name :"/>

            <TextView
                android:id="@+id/tv_FullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/textView"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/tv_FullName"
                android:text="Token :"/>

            <TextView
                android:id="@+id/tv_Token"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/textView3"
                android:text="TextView" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlyt_circle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lyt_hometext"
            android:paddingTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle"
                android:paddingTop="50dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_car"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="50dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="15" />

                <TextView
                    android:id="@+id/tv_ca2r"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:text="Aktif Araç" />


            </LinearLayout>






        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ly_home_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:layout_below="@id/rlyt_circle">


            <Button
                android:id="@+id/btn_addcar"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:background="#ffffff"
                android:drawableLeft="@mipmap/ic_launcher"
                android:text="Araç Ekle"
                android:textSize="15dp"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_mycars"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:background="#ffffff"
                android:drawableLeft="@mipmap/ic_launcher"
                android:text="Araçlarım"
                android:textSize="15dp"
                android:textAllCaps="false" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_home_text"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/ly_home_btn">


            <EditText
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:ems="10"
                android:inputType="textMultiLine" />
        </LinearLayout>


    </RelativeLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:backgroundTint="#ffaa00"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation" />


    </android.support.design.widget.CoordinatorLayout>
